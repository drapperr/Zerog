@model IEnumerable<Zerog.Web.ViewModels.Administration.Products.ProdunctInfoViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th><span>Name</span></th>
            <th><span>Price</span></th>
            <th><span>Discount</span></th>
            <th><span>Category</span></th>
            <th><span>Manufacturer</span></th>
            <th><span>CreatedOn</span></th>
            <th><span>ModifiedOn</span></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Discount</td>
                <td>@item.CategoryName</td>
                <td>@item.ManufacturerName</td>
                <td>@item.CreatedOn</td>
                <td>@item.ModifiedOn</td>
                <td>
                    <a asp-area="" asp-controller="Products" asp-action="ById" asp-route-id="@item.Id" class="table-link">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="table-link">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa  fa-edit fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>

                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.Id" class="table-link" method="post">
                        <button type="submit">
                            <span class="fa-stack">
                                <i class="fa fa-square fa-stack-2x"></i>
                                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                            </span>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
