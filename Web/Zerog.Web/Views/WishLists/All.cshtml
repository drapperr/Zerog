@model List<Zerog.Web.ViewModels.WishLists.WishListViewModel>
@(ViewData["Title"] = "MyWishList")

<table class="table">
    <thead>
        <tr>
            <th><span>Product</span></th>
            <th><span>Price</span></th>
            <th><span>Category</span></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl" alt="" width="50" height="40">
                    <a asp-controller="Products" asp-action="ById" asp-route-id="@item.Id">@item.Name</a>
                </td>
                <td>
                    $@item.NewPrice
                </td>
                <td>
                    @item.CategoryName
                </td>
                <td>
                    <a asp-controller="Products" asp-action="ById" asp-route-id="@item.Id" class="table-link">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                    <a asp-controller="ShoppingCarts" asp-action="AddProduct" asp-route-id="@item.Id" class="table-link">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa  fa-shopping-cart fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="table-link danger">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>