        <div class="row">
            <!-- Product main img -->
            <div class="col-md-5 col-md-push-2">
                <div id="product-main-img">
                    @foreach (var image in Model.Images)
                    {
                        <div class="product-preview">
                            <img src="@image" alt="">
                        </div>
                    }
                </div>
            </div>
            <!-- /Product main img -->
            <!-- Product thumb imgs -->
            <div class="col-md-2  col-md-pull-5">
                <div id="product-imgs">
                    @foreach (var image in Model.Images)
                    {
                        <div class="product-preview">
                            <img src="@image" alt="">
                        </div>
                    }
                </div>
            </div>
            <!-- /Product thumb imgs -->
            <!-- Product details -->
            <div class="col-md-5">
                <div class="product-details">
                    <h2 class="product-name">@Model.Name</h2>
                    <div>
                        <div class="product-rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                        </div>
                        <a class="review-link" href="#">10 Review(s) | Add your review</a>
                    </div>
                    <div>
                        <h3 class="product-price">
                            $@Model.NewPrice
                            @if (Model.Discount != null)
                            {
                                <del class="product-old-price">$@Model.Price</del>
                            }
                        </h3>
                        @if (Model.IsNew)
                        {
                            <span class="product-available">NEW</span>
                        }
                    </div>
                    <p>
                        <div class="featured-description">
                            <ul class="tech-specs-list">
                                <li><i class="fa fa-microchip"></i> @Model.ProcessorName</li>
                                <hr />
                                <li>@Model.VideoCardName</li>
                                <hr />
                                <li<i class="fas fa-memory"></i> @Model.MemoryName</li>
                                <hr />
                                <li><i class="fas fa-hdd"></i> @Model.SSDName</li>
                                <hr />
                                <li><i class="fa fa-tv"></i> @Model.DisplayName</li>
                            </ul>
                        </div>
                    </p>

                    <div class="add-to-cart">
