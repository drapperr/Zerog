        <input asp-for="Lan" list="lan" class="form-control input" />
        <datalist id="lan">
            @foreach (var lan in Model.Parts.Lans)
            {
                <option value="@lan"> </option>
            }
        </datalist>
        <span asp-validation-for="Lan" class="text-danger"></span>
    </div>

    <div id="PortsContainer" class="">
        <label asp-for="Ports"></label>
        <button class="btn btn-success" type="button" onclick="addInput(this,'Ports')">Add</button>
        <div class="form-inline form-group">
            <input type="number" name="Ports[0].Count" class="form-group form-control input">
            <div class="form-group"> x </div>
            <input type="text" name="Ports[0].Name" list="port" class="form-group form-control input">
            <datalist id="port">
                @foreach (var port in Model.Parts.Ports)
                {
                    <option value="@port"> </option>
