        </datalist>
        <span asp-validation-for="HDD" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SSD"></label>
        <input asp-for="SSD" list="ssd" class="form-control input" />
        <datalist id="ssd">
