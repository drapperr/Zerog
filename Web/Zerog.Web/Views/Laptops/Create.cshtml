        <input asp-for="Weight" class="form-control input" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Demensions"></label>
        <input asp-for="Demensions" class="form-control input" />
        <span asp-validation-for="Demensions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Color"></label>
        <input asp-for="Color" list="color" class="form-control input" />
        <datalist id="color">
            @foreach (var color in Model.Parts.Colors)
            {
                <option value="@color"> </option>
            }
        </datalist>
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-primary" value="Create" />
</form>

@section Scripts{
    <script>
        function addInput(x,PropName) {
            var parentNode = x.parentNode;
            var div = parentNode.children[2].cloneNode(true);
            var count = parentNode.children.length - 2;

            div.children[0].value = "";
            div.children[0].setAttribute("name", PropName + "[" + count + "]");
            parentNode.appendChild(div);
        };
    </script>
}