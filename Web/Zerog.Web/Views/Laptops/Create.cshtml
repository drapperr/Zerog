        <span asp-validation-for="Processor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VideoCard"></label>
        <input asp-for="VideoCard" list="videoCard" class="form-control input" />
        <datalist id="videoCard">
            @foreach (var videoCard in Model.Parts.VideoCards)
            {
                <option value="@videoCard"> </option>
            }
        </datalist>
        <span asp-validation-for="VideoCard" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Memory"></label>
        <input asp-for="Memory" list="memory" class="form-control input" />
        <datalist id="memory">
            @foreach (var memory in Model.Parts.Memories)
            {
                <option value="@memory"> </option>
            }
        </datalist>
        <span asp-validation-for="Memory" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MemorySlots"></label>
        <input asp-for="MemorySlots" class="form-control input" />
        <span asp-validation-for="MemorySlots" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HDD"></label>
        <input asp-for="HDD" list="hdd" class="form-control input" />
        <datalist id="hdd">
            @foreach (var hdd in Model.Parts.HDDs)
            {
                <option value="@hdd"> </option>
