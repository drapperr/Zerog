    <div class="form-group">
        <label asp-for="Display"></label>
        <input asp-for="Display" list="display" class="form-control input" />
        <datalist id="display">
            @foreach (var display in Model.Parts.Displays)
            {
                <option value="@display"> </option>
            }
        </datalist>
        <span asp-validation-for="Display" class="text-danger"></span>
    </div>

    <div class="form-group">
