        <input asp-for="Camera" list="camera" class="form-control input" />
        <datalist id="camera">
            @foreach (var camera in Model.Parts.Cameras)
            {
                <option value="@camera"> </option>
            }
        </datalist>
        <span asp-validation-for="Camera" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Audio"></label>
        <input asp-for="Audio" list="audio" class="form-control input" />
        <datalist id="audio">
            @foreach (var audio in Model.Parts.Cameras)
            {
                <option value="@audio"> </option>
            }
        </datalist>
        <span asp-validation-for="Audio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OpticalDevice"></label>
        <input asp-for="OpticalDevice" class="checkbox-inline" />
