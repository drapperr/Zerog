        <datalist id="operatingSystem">
            @foreach (var operatingSystem in Model.Parts.OperatingSystems)
            {
                <option value="@operatingSystem"> </option>
            }
        </datalist>
        <span asp-validation-for="OperatingSystem" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Battery"></label>
        <input asp-for="Battery" list="battery" class="form-control input" />
        <datalist id="battery">
            @foreach (var battery in Model.Parts.Batteries)
